---
const { id, contact_title, contact_info, contact_link, contact_cta } = Astro.props
---

<div class='w-60 rounded-lg border border-gray-200 bg-white p-6 text-center shadow-sm md:w-60' id={id}>
  <a href={contact_link} target='_blank' rel='noreferrer'>
    <h5 class='text-xl font-semibold tracking-tight text-gray-900'>
      {contact_title}
    </h5>
  </a>
  <p class='mb-3 font-normal text-gray-500'>{contact_info}</p>
  <a
    href={contact_link}
    target='_blank'
    rel='noreferrer'
    class='inline-flex items-center text-teal-600 transition-all hover:underline'
  >
    {contact_cta || 'Ver m√°s'}
    <svg
      class='ml-1 h-3 w-3 text-teal-600'
      aria-hidden='true'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 14 10'
    >
      <path
        stroke='currentColor'
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M1 5h12m0 0L9 1m4 4L9 9'></path>
    </svg>
  </a>
</div>
