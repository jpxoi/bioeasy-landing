---
interface Props {
  id: string
  contact_title: string
  contact_info: string
  contact_link: string
  contact_cta: string
}

import { ArrowRight } from '@lucide/astro'

const { id, contact_title, contact_info, contact_link, contact_cta } = Astro.props
---

<div
  class='flex w-full flex-col items-center gap-2 rounded-lg border border-gray-200 bg-white p-4 text-center shadow-sm md:w-60'
  id={id}
>
  <div class='flex flex-col items-center'>
    <a href={contact_link} target='_blank' rel='noreferrer'>
      <h5 class='text-lg font-semibold tracking-tight text-gray-900'>
        {contact_title}
      </h5>
    </a>
    <p class='text-sm font-normal text-gray-500'>{contact_info}</p>
  </div>
  <a
    href={contact_link}
    target='_blank'
    rel='noreferrer'
    class='inline-flex items-center gap-0.5 text-teal-600 transition-all hover:text-teal-700 hover:underline'
  >
    {contact_cta || 'Ver m√°s'}
    <ArrowRight class='size-3' />
  </a>
</div>
