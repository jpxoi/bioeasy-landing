---
import FooterSocial from './FooterSocial.astro'
import FooterMenu from './FooterMenu.astro'
import { Image } from 'astro:assets'
---

<footer class='bg-white'>
  <div class='mx-auto w-full max-w-(--breakpoint-xl) p-4 py-6 lg:py-8'>
    <div class='flex flex-col gap-6 md:flex-row md:justify-between'>
      <div class='flex flex-col items-start'>
        <a href='/#' class='mb-7 flex items-center' aria-label='Return to homepage.'>
          <Image
            src='/img/logo.webp'
            loading='lazy'
            class='me-3 h-8 w-auto'
            alt='Bioeasy Galenos Logo'
            width={1299}
            height={262}
          />
        </a>
        <FooterSocial />
      </div>
      <FooterMenu />
    </div>
    <hr class='my-6 border-gray-200 sm:mx-auto lg:my-8' />
    <div class='sm:flex sm:items-center sm:justify-between'>
      <span class='text-sm text-gray-500 sm:text-center'>
        © 2025 <a href='/#' class='transition-all hover:underline'>Bioeasy Galenos™</a>. Todos Los Derechos
        Reservados.
      </span>
      <div class='mt-4 flex sm:mt-0 sm:justify-center'>
        <span class='text-sm text-gray-500'>
          Desarrollado por <a
            href='https://jpxoi.com'
            target='_blank'
            rel='noreferrer'
            class='transition-all hover:underline'>Jean Paul Fernandez</a
          ></span
        >
      </div>
    </div>
  </div>
</footer>
