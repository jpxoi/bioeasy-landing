---
import { db, Team as TeamTable } from 'astro:db'
import TeamMember from './TeamMember.astro'

const teamMembers = await db.select().from(TeamTable)
---

<div
  class='team__content__grid grid grid-cols-1 justify-items-center gap-4 pt-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4'
>
  {teamMembers.map((teamMember) => <TeamMember key={teamMember.id} teamMember={teamMember} />)}
</div>
