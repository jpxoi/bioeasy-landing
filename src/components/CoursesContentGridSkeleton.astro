---
import Skeleton from './Skeleton.astro'
---

<div
  class='grid max-w-(--breakpoint-xl) grid-cols-1 justify-items-center gap-4 px-4 sm:grid-cols-2 md:grid-cols-2 md:px-8 lg:grid-cols-3 lg:px-16'
>
  {
    Array(30)
      .fill(0)
      .map(() => (
        <div class='flex w-full max-w-sm flex-col rounded-lg border border-gray-200 bg-white shadow-sm'>
          <Skeleton className='w-full h-full aspect-8/10 leading-none rounded-b-none' />
          <div class='flex flex-1 flex-col gap-4 p-5 text-center'>
            <div class='flex flex-col items-center gap-2'>
              <div class='flex items-center justify-center gap-2'>
                <Skeleton className='w-12 rounded-md h-6' />
                <Skeleton className='w-12 rounded-md h-6' />
              </div>
              <Skeleton className='w-40 h-8' />
            </div>
            <div class='flex h-20 flex-1 flex-col gap-1 py-0.5'>
              <Skeleton className='w-full h-4' />
              <Skeleton className='w-full h-4' />
              <Skeleton className='w-full h-4' />
              <Skeleton className='w-full h-4' />
            </div>
            <div class='flex items-end justify-center'>
              <Skeleton className='w-30 h-9' />
            </div>
          </div>
        </div>
      ))
  }
</div>
